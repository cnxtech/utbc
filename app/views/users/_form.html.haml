= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_area :first_name
  .field
    = f.label :last_name
    = f.text_area :last_name
  .field
    = f.label :email
    = f.text_area :email
  .field
    = f.label :student_number
    = f.text_area :student_number
  .field
    = f.label :gender
    = f.text_area :gender
  .actions
    = f.submit 'Save'
